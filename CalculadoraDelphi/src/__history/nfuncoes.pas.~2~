unit nfuncoes;

interface

uses
  System.SysUtils, System.Variants;

function Calcular(Nro1, Nro2:double; Operador:char):double;

implementation

Function Calcular(Nro1, Nro2:double; Operador:char):double;
begin
  case operador of
    '+' : Result := Nro1 + Nro2;
    '-' : Result := Nro1 - Nro2;
    '*' : Result := Nro1 * Nro2;
    '/' : Result := Nro1 / Nro2;
  end;
end;

end.
